dark = #1F2041
purple = #BC9CFF
green = #6FCF97

$title
  font-family Montserrat, Arial, sans-serif
  font-weight bold
  font-size: 2.4rem
  line-height: 2.926rem
  color rgba(dark)

$subtitle
  font-family Montserrat, Arial, sans-serif
  font-weight bold
  font-size: 1.9rem
  line-height: 2.4rem
  color rgba(dark)

$label
  font-family Montserrat, Arial, sans-serif
  font-weight bold
  font-size: 1.2rem
  line-height: 1.463rem
  color rgba(dark, 0.75)

$default-text
  font-family Montserrat, Arial, sans-serif
  font-weight normal
  font-size: 1.4rem
  line-height: 2.4rem
  color rgba(dark, 0.75)
